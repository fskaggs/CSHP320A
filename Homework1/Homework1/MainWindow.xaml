<Window x:Class="Homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <StackPanel Grid.Column="0" Margin="5, 5">
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Enter Name:" Margin="5, 0"/>
            <TextBox x:Name="uxName" TextChanged="ux_InputRecieved" Width="200" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Margin="5, 0" Text="Enter Password:" />
            <TextBox x:Name="uxPassword" TextChanged="ux_InputRecieved" Width="200"/>
        </StackPanel>
        <Button x:Name="uxSubmit" Width="100" Click="uxSubmit_Click" IsEnabled="False" Margin="10">Submit</Button>
    </StackPanel>
</Window>
