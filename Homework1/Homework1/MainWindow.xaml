<Window x:Class="Homework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <StackPanel Grid.Column="0">
        <TextBlock>Enter Name:</TextBlock>
        <TextBox x:Name="uxName" TextChanged="ux_InputRecieved" ></TextBox>
        <TextBlock>Enter Password:</TextBlock>
        <TextBox x:Name="uxPassword" TextChanged="ux_InputRecieved" ></TextBox>
        <Button x:Name="uxSubmit" Click="uxSubmit_Click" IsEnabled="False" >Submit</Button>
    </StackPanel>
</Window>
