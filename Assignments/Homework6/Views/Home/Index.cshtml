@model Homework6.Models.CardModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
    <title>Birthday Card Generator</title>
</head>
<body>
    <div class="row">
        <div class="container">
            <h4>Send a Birthday Card</h4>
            <form asp-action="Index">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="FromName" class="col-md-1 col-form-label">From:</label>
                    <div class="col-md-4">
                        <input asp-for="FromName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ToName" class="col-md-1 col-form-label">To:</label>
                    <div class="col-md-4">
                        <input asp-for="ToName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Message" class="col-md-1 col-form-label">Message:</label>
                    <div class="col-md-4">
                        <input asp-for="Message" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send Card" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
